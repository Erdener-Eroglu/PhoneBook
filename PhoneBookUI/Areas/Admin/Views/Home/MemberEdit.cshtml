@model MemberViewModel
@{
    ViewData["Title"] = "MemberEdit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Üye Bilgileri</h3>
<div class="row">
    <form method="post">
        <input type="hidden" name="Email" />

        <div class="form-group">
            <label style="font-weight:bold">İsim:</label>
            <input type="text" class="form-control" name="Name" />
            @*<span class="text-danger" asp-validation-for="Name"></span>*@
        </div><br />

        <div class="form-group">
            <label style="font-weight:bold">Soyisim:</label>
            <input type="text" class="form-control" name="Surname" />
        </div><br />

        <div class="form-group">
            <label style="font-weight:bold">Doğum Tarihi:</label>
            <input type="date" class="form-control" name="BirthDate" />
        </div><br />

        <div class="form-group">
            <label style="font-weight:bold">Cinsiyet:</label>
            <select class="form-control" name="Gender">
                <option value="1">Kadın</option>
                <option value="2">Erkek</option>
            </select>
        </div><br />

        <div class="form-group">
            <label style="font-weight:bold">Resim:</label>
            <input type="file" class="form-control" /> @*name eklenecek*@
        </div><br />

        <div class="form-group">
            <button type="submit" class="btn btn-info">GÜNCELLE</button>
        </div><br />

    </form>


</div>

